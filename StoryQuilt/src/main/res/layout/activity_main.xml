<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:id = "@+id/activity_main_centerOnMe"
        android:layout_width = "0dp"
        android:layout_height = "0dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id = "@+id/activity_main_writing_title"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:textSize = "@dimen/activity_title_font"
        android:text = "@string/activity_main_writing_title"
        android:layout_below="@+id/sign_in_button"
        android:layout_alignParentLeft="true" />

    <ListView
        android:id = "@+id/activity_main_writing_listview"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_above = "@id/activity_main_centerOnMe"
        android:layout_below = "@id/activity_main_writing_title"
        android:dividerHeight = "@dimen/activity_divider_height"/>

    <TextView
        android:id = "@+id/activity_main_reading_title"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:textSize = "@dimen/activity_title_font"
        android:text = "@string/activity_main_reading_title"
        android:layout_below="@+id/activity_main_centerOnMe"
        android:layout_alignParentLeft="true" />

    <ListView
        android:id = "@+id/activity_main_reading_listview"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/activity_main_reading_title"
        android:layout_alignParentBottom="true"
        android:dividerHeight = "@dimen/activity_divider_height"/>

</RelativeLayout>

