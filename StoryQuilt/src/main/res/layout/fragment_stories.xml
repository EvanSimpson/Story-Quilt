<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/fragment_parent"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/quilt_background">


    <TextView
        android:id = "@+id/no_stories"
        android:visibility = "gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/fragment_stories_listview"
        android:layout_alignParentLeft="true"
        android:background="@drawable/white_background"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="No Stories"/>


    <TextView
        android:id = "@+id/fragment_stories_sortby_text"
        android:layout_alignParentRight="true"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:visibility = "gone"
        android:paddingTop = "4dp"
        android:paddingLeft = "4dp"
        android:textColor = "@android:color/darker_gray"
        android:text = "sorted by: popular"
        android:paddingBottom="4dp"
        android:paddingRight="4dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/white_background"/>

    <ListView
        android:id = "@+id/fragment_stories_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:layout_below = "@id/fragment_stories_sortby_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>